RewriteEngine on
SetEnvIf X-Forwarded-Proto https SERVER_PORT=443
SetEnvIf X-Forwarded-Proto https HTTPS=on
RewriteCond %{HTTP:HTTPS} !=on [NC]


RewriteRule ^(.*)$ https://%{SERVER_NAME}%{REQUEST_URI} [R=301,L]


# Diploma
RewriteRule ^about$  https://%{SERVER_NAME}%{REQUEST_URI}.php [L]
RewriteRule ^d_login$  https://%{SERVER_NAME}%{REQUEST_URI}.php [L]
RewriteRule ^d_connection$  https://%{SERVER_NAME}%{REQUEST_URI}.php [L]